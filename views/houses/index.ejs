<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header.ejs') %>
</head>
<body>
    <%- include('../partials/nav.ejs') %>

    <h1>Houses for Sale</h1>
    <% listings.forEach(listing => { %>
        <div class='house-display' onclick="location.href = '/houses/<%=listing._id%>'">
            
            <img src='/uploads/<%= listing.img %>' 
                alt='house-id#-<%=listing._id%>'>
                <span class='house-description'>    
                    <!-- <ul class='text-description'> -->
                        <%= listing.address %>
                        <br>
                        <%= listing.city %>
                        <br>
                        <% const price = (listing.price) %>
                        <%= '$' + price.toFixed(0) %>
                    <!-- </ul> -->
                </span>
            
        </div>
        <% }) %>
    <%- include('../partials/footer.ejs') %>
</body>
</html>