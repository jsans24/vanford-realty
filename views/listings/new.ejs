<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header.ejs') %>
</head>
<body>
  <%- include('../partials/nav.ejs') %>
  <div class='container'>
    <div class='form-screen'>
    <h1>Add A House Listing</h1>
    <form action='/listings' enctype='multipart/form-data' method='POST'>
      <div class='form-group col-sm-6'>
      <label for='realtor'>Listing Realtor:</label>
      <select class='form-control' id='realtor' name='realtor'>
        <% realtors.forEach(realtor => { %>
        <option value='<%= realtor._id %>'><%= realtor.name %></option>
        <% }) %> 
      </select>
      </div>
      <div class='form-group col-sm-6'>
      <label for='city'>City:</label>
      <select class='form-control' id='city' name='city'>
        <% cities.forEach(city => { %>
        <option value='<%= city._id %>'><%= city.name %></option>
        <% }) %> 
      </select>
      </div>
      <div class='form-group col-sm-6'>
      <label for='address'>Address:</label>
      <input type='text' class='form-control' id='address' name='address' required>
      </div>
      <div class='form-group col-sm-6'>
      <label for='price'>Price:</label>
      <input type='number' class='form-control' id='price' name='price' 
      required>
      </div>
      <div class='form-group col-sm-6'>
      <label for='bedrooms'>Number of Bedrooms:</label>
      <input type="number" class='form-control' id='bedrooms' name='bedrooms' 
      required>
      </div>
      <div class='form-group col-sm-6'>
      <label for='bathrooms'>Number of Bathrooms:</label>
        <input type="number" class="form-control" id='bathrooms' 
        name='bathrooms' required>
      </div>
      <div class='form-group col-sm-6'>
      <label for='size'>Size (sq.ft.):</label>
      <input type='number' class='form-control' id='size' name='size' required>
      </div>
      <div class='form-group col-sm-6'>
      <label for='about'>About:</label>
      <input type='textarea' class='form-control' id='about' name='about'>
      </div>
      <div class='form-group col-sm-6'>
        <label for='img'>Listing Photo:</label>
        <input type='file' class='form-control' id='img' name='img'>
      </div>
      <div class='col text-center'>
        <button type='submit' class='btn btn-primary'>Add Listing</button>
      </div>
    </form>
    </div>
  </div>
</body>
</html>